@model List<streamingParadigmas.Clases.Serie>
@using System.Linq

@{
    ViewData["Title"] = "Películas Populares";
}
<style>
    .carousel-container {
        width: 90%;
        margin: 0 auto;
        overflow-x: auto;
        display: flex;
        gap: 1.5rem;
        margin-bottom: 15px;
        scroll-snap-type: x mandatory;
        padding: 1rem 1rem;
        scrollbar-width: none;
        background: linear-gradient(to right,rgba(174, 45, 104, 0.0),rgba(174, 45, 104, 0.4), rgba(40, 6, 89, 0.4),rgba(40,6, 89, 0.0));
    }

        .carousel-container::-webkit-scrollbar {
            display: none;
        }

    .movie-item {
        flex: 0 0 auto;
        width: 220px;
        scroll-snap-align: start;
        position: relative;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .movie-item:hover {
            transform: scale(1.05);
        }

    .movie-img {
        width: 100%;
        height: 330px;
        object-fit: cover;
        display: block;
    }

    .movie-overlay {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: linear-gradient(to right, rgba(174, 45, 104, 0.7), rgba(40, 6, 89, 0.7));
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        padding: 1rem;
        text-align: center;
    }

    .movie-item:hover .movie-overlay {
        opacity: 1;
    }

    .movie-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .movie-rating,
    .movie-duration {
        font-size: 0.9rem;
        margin-top: 5px;
    }

    h2 {
        text-align: center;
        margin-top: 2rem;
    }

    .title {
        color: white;
    }

    .mas-boton {
        width: 90px;
        height: 30px;
        background: linear-gradient(to right, rgba(174, 45, 104, 1), rgba(40, 6, 89, 1));
        border-radius: 15px;
        padding: 6px;
        transition: ease-in-out 0.4s all;
    }

        .mas-boton:hover {
            transform: scale(0.85);
        }

    .movie-link {
        text-decoration: none;
        margin-top: 40px;
    }
</style>

<h2 class="title">CATALOGO SERIES</h2>


    <div class="carousel-container">
        <h3>Carrusel </h3>
        @foreach (var serie in Model)
        {
  
            <div class="movie-item">
                <img src="@serie.Imagen" alt="@serie.Nombre" class="movie-img" />
                <div class="movie-overlay">
                    <div class="movie-title">@serie.Nombre</div>
                    <div class="movie-rating ">⭐ @serie.Calificacion</div>
                    @* <div class="movie-duration">Duración: @pelicula.Duracion.Minutes min</div> *@
                    <a asp-controller="Series" asp-action="Descripcion" asp-route-nombre="@serie.Nombre" class="movie-link"><div class="mas-boton">VER MAS</div></a>
                </div>
            </div>
        }
    </div>

