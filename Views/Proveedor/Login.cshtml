@model string
@{
    ViewData["Title"] = "Login";
}

<style>
    /* Fondo general */
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(90deg, #b1326a, #1e0069);
        height: 100vh;
        overflow: hidden;
        color: white;
        position: relative;
        perspective: 1200px; /* perspectiva 3D */
    }

    .grain {
        pointer-events: none;
        position: absolute;
        width: 100%;
        height: 100%;
        background-image: url('https://www.transparenttextures.com/patterns/asfalt-dark.png');
        opacity: 0.1;
        z-index: 1;
    }

    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        z-index: 2;
        position: relative;
        transform-style: preserve-3d;
    }

    .login-card {
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.03));
        backdrop-filter: blur(30px);
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 20px 30px rgba(0, 0, 0, 0.5), 0 0 15px rgba(255, 255, 255, 0.1), inset 0 0 10px rgba(255, 255, 255, 0.1);
        width: 380px;
        text-align: center;
        transform: rotateX(5deg) rotateY(-5deg);
        transition: transform 0.6s ease;
    }

        .login-card:hover {
            transform: rotateX(0deg) rotateY(0deg) scale(1.03);
            box-shadow: 0 25px 40px rgba(0, 0, 0, 0.6), 0 0 30px rgba(255, 255, 255, 0.2), inset 0 0 20px rgba(255, 255, 255, 0.2);
        }

    .logo {
        font-size: 2.8rem;
        font-weight: bold;
        margin-bottom: 10px;
        color: white;
        
    }

        .logo .dot {
            color: #ffffff;
            font-weight: bold;
        }

        .logo span {
            color: #ff3399;
        }

    h2 {
        margin-bottom: 25px;
        text-shadow: 0 0 4px rgba(255, 255, 255, 0.3);
    }

    .form-group {
        margin-bottom: 25px;
    }

    input {
        width: 100%;
        padding: 14px;
        border-radius: 10px;
        border: none;
        outline: none;
        font-size: 16px;
        background: rgba(255, 255, 255, 0.07);
        color: white;
        box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

        input:focus {
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 10px #ffcc00;
        }

        input::placeholder {
            color: #ccc;
        }

    .btn {
        width: 100%;
        padding: 14px;
        background: linear-gradient(90deg, #ffcc00, #ffaa00);
        border: none;
        border-radius: 12px;
        font-weight: bold;
        color: #1e0069;
        font-size: 17px;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(255, 204, 0, 0.4), inset 0 0 5px rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

        .btn:hover {
            background: linear-gradient(90deg, #ffdd33, #ffbb00);
            transform: scale(1.03);
            box-shadow: 0 6px 20px rgba(255, 204, 0, 0.6), inset 0 0 10px rgba(255, 255, 255, 0.3);
        }

    .switch {
        margin-top: 25px;
        font-size: 15px;
    }

        .switch a {
            color: #ffe600 !important;
            text-decoration: none;
            text-shadow: 0 0 5px #ffe600;
        }
</style>

<div class="grain"></div>
<div class="login-container">
    <div class="login-card">
        <h1 class="logo"><span class="dot">.</span>NET<span>flix</span></h1>
        <h2>Iniciar sesión</h2>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <input type="text" name="username" placeholder="Nombre de usuario" required />
            </div>
            <button type="submit" class="btn">Entrar</button>
            <p class="switch">¿No tienes cuenta? <a href="/proveedor/registro">Regístrate aquí</a></p>
        </form>
    </div>
</div>
